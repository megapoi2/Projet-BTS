<Page x:Class="Raminagrobis.WPF.Paniers"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Raminagrobis.WPF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Paniers">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="225"/>
            <RowDefinition Height="225"/>
        </Grid.RowDefinitions>
        <ListView Name="lvPaniers" Margin="0,35,0,66" Grid.RowSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" Width="100" DisplayMemberBinding="{Binding ID}" />
                    <GridViewColumn Header="Libelle" Width="100" DisplayMemberBinding="{Binding Libelle}" />
                    
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Afficher" Margin="345,175,345,10" Click="LoadPage" Grid.Row="1"/>
    </Grid>
</Page>
